- title "Login"

#login
  - form_for resource_name, resource, :url => session_path(resource_name) do |f|
    %fieldset
      %legend Login
      %h6
        ! Welcome to <strong>tmi</strong>. Please enter your credentials.
      .inputGroup
        = f.label :email
        = f.text_field :email
          
      .inputGroup
        = f.label :password
        = f.password_field :password
      - if devise_mapping.rememberable?
        .inputGroup
          = f.check_box :remember_me
          = f.label :remember_me
      %p= f.submit "Sign in"
      = render :partial => "shared/devise_links"